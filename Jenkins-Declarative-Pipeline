pipeline {
    agent any

    stages {
        stage('Get Source Code') {
            steps {
                echo 'Cloning / pulling the latest code'
		            git 'https://github.com/venkat09docs/FlaskAppUTest.git'
            }
        }
        stage('Py Env Preparation'){
  	   steps{
      		sh '''#!/bin/bash
      		source ~/.bashrc
      		pyenv versions

      		pyenv global pypy3.8-7.3.11'''
  	   }
  	}
    }
}
